\RequirePackage{color}\mode<presentation>

\definecolor{color_top} {HTML}{5e42ff}
\definecolor{color_bottom} {HTML}{aa82ff}

% Settings
\setbeamercolor*{title page header}{fg=white}
\setbeamercolor*{author}{fg=white}
\setbeamercolor*{date}{fg=white}

% Items
\setbeamertemplate{items}[square]
\setbeamertemplate{sections/subsections in toc}[square]

% Blocks
\setbeamercolor{block title}{bg=color_top!95, fg=white}
\setbeamercolor{block title example}{bg=green!20}
\setbeamercolor{block title alerted}{bg=alerted text.fg!20}

\setbeamercolor{block body}{bg=color_bottom!50}
\setbeamercolor{block body example}{bg=green!10}
\setbeamercolor{block body alerted}{bg=alerted text.fg!10}

\mode
<all>
